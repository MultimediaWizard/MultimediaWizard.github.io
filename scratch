                            {group: "Satellite recorded", value: 5345558.63},
                        ];

                        var mtdata4 = [
                            {group: "State reported", value: 3992885},
                            {group: "Satellite recorded", value: 4167978.25},
                        ];
                        var mtdata5 = [
                            {group: "State reported", value: 5212740},
                            {group: "Satellite recorded", value: 5730058.93},
                        ];
                        var mtdata6 = [
                            {group: "State reported", value: 5422500},
                            {group: "Satellite recorded", value: 3499417.36},
                        ];
                        var mtdata7 = [
                            {group: "State reported", value: 6032575},
                            {group: "Satellite recorded", value: 3663720.94},
                        ];
                        var mtdata8 = [
                            {group: "State reported", value: 5123582},
                            {group: "Satellite recorded", value: 1996371.19},
                        ];
                        var mtdata9 = [
                            {group: "State reported", value: 4442725},
                            {group: "Satellite recorded", value: 1080539.73},
                        ];

                        // set the dimensions and margins of the graph
                        var margin = {top: 30, right: 30, bottom: 70, left: 95},
                            width = 340 - margin.left - margin.right,
                            height = 400 - margin.top - margin.bottom;

                        // append the svg object to the body of the page
                        let mtsvg = d3.select("#Montana-data-viz")
                            .append("svg")
                            .attr("width", width + margin.left + margin.right)
                            .attr("height", height + margin.top + margin.bottom)
                            .append("g")
                            .attr("transform",
                                "translate(" + margin.left + "," + margin.top + ")");

                        // X axis
                        var mtx = d3.scaleBand()
                            .range([ 0, width ])
                            .domain(mtdata1.map(function(d) { return d.group; }))
                            .padding(0.2);
                        mtsvg.append("g")
                            .attr("transform", "translate(0," + height + ")")
                            .attr("class", "x-axis")
                            .call(d3.axisBottom(mtx))

                        // Add Y axis
                        var mty = d3.scaleLinear()
                            .domain([0, 7000000])
                            .range([ height, 0]);
                        mtsvg.append("g")
                            .attr("class", "y-axis")
                            .call(d3.axisLeft(mty));

                        //Y label
                        mtsvg.append("text")
                            .attr("class", "y label")
                            .attr("text-anchor", "end")
                            .attr("y", 6)
                            .attr("dy", "-6.5em")
                            .attr("dx", "-5em")
                            .attr("transform", "rotate(-90)")
                            .text("Thousand cubic feet");

                        // coloring time!

                        var t = d3.selectAll("text")
                            .attr("fill", "#191919")

                        var l = d3.selectAll("line")
                            .attr("stroke", "#191919");

                        var p = mtsvg.selectAll("path")
                            .attr("opacity", "0");


                        // A function that create / update the plot for a given variable:
                        function mtupdate(mtdata) {

                            let mtu = mtsvg.selectAll("rect")
                                .data(mtdata)

                            mtu
                                .enter()
                                .append("rect")
                                .merge(mtu)
                                .transition()
                                .duration(1000)
                                .attr("x", function(d) { return mtx(d.group); })
                                .attr("y", function(d) { return mty(d.value); })
                                .attr("width", mtx.bandwidth())
                                .attr("height", function(d) { return height - mty(d.value); })
                                .attr("class", function(d) { return d.group; })
                                .attr("id", "mtrect")

                        }

                        // Initialize the plot with the first dataset
                        mtupdate(mtdata1)

                    </script>
